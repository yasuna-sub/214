{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["server.ts"],
  "exclude": ["node_modules"]
} 